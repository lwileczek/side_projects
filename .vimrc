:imap jj <Esc>
:set tw=80
:set nocompatible
:set ignorecase
:set smartcase
:set incsearch
:set hlsearch
:set tabstop=4
:set expandtab
:set shiftwidth=4
:set autoindent
:set smartindent
:set formatoptions=tcq
syntax on
:set spelllang=en
:set spellfile=/usr/share/dict/words.utf-8.add  " location may vary, change file to end in <file>.utf-8.add
:set ruler
:set modeline
:set modelines=5
